        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.Pretendard.Regular" parent="TextView.Pretendard">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.Pretendard.Regular.12" parent="TextView.Pretendard.Regular">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextView.Pretendard.Regular.16" parent="TextView.Pretendard.Regular">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView.Pretendard.Medium" parent="TextView.Pretendard">
        <item name="android:fontFamily">@font/pretendard_medium</item>
