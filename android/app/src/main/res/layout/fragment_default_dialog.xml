<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="dialogUiModel"
            type="com.yagubogu.presentation.dialog.DefaultDialogUiModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="30dp">

        <TextView
            android:id="@+id/tv_dialog_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{dialogUiModel.emoji}"
            android:textSize="48dp"
            android:visibility="@{dialogUiModel.emoji == null ? View.GONE : View.VISIBLE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpUsage"
            tools:text="\uD83D\uDC2F"
            tools:visibility="visible" />

        <Space
            android:id="@+id/space_emoji_margin"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:visibility="@{dialogUiModel.emoji==null ? View.GONE : View.VISIBLE}"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_emoji" />

        <TextView
            android:id="@+id/tv_dialog_title"
            style="@style/TextView.Esamanru.Medium.20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{dialogUiModel.title}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/space_emoji_margin"
            tools:text="다이얼로그 제목" />

        <TextView
            android:id="@+id/tv_dialog_message"
            style="@style/TextView.Pretendard.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@{dialogUiModel.message}"
            android:textAlignment="center"
            android:textColor="@color/gray700"
            android:textSize="14sp"
            android:visibility="@{dialogUiModel.message==null ? View.GONE : View.VISIBLE}"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_title"
            tools:text="엄청나게\n긴텍스트엄청나게긴텍스트엄청나게긴텍스트엄청나게긴텍스트엄청나게긴텍스트엄청나게긴텍스트엄청나게긴텍스트엄청나게긴텍스트엄청나게긴텍스트엄청나게긴텍스트엄청나게긴텍스트엄청나게긴텍스트엄청나게긴텍스트"
            tools:visibility="visible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tv_negative_btn"
            style="@style/Widget.App.Button.Negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:text="@{dialogUiModel.negativeText==null ? @string/all_cancel : dialogUiModel.negativeText}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_positive_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_message"
            tools:text="취소" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tv_positive_btn"
            style="@style/Widget.App.Button.Positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{dialogUiModel.positiveText==null ? @string/all_confirm : dialogUiModel.positiveText}"
            app:layout_constraintBottom_toBottomOf="@id/tv_negative_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_negative_btn"
            app:layout_constraintTop_toTopOf="@id/tv_negative_btn"
            tools:text="확인" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
